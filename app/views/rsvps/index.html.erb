<div class="center-box guest-list">
  <h2 class="text-center">Guest List</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Number of Attendees
        </th>
        <th>
          Accept
        </th>
        <th>
          Comment
        </th>
      </tr>
    </thead>
    <tbody>
      <% @rsvps.each do |r| %>
        <tr>
          <td>
            <%= r.party %>
          </td>
          <td>
            <%= r.attendees %>
          </td>
          <td>
            <%= human_boolean(r.accept) %>
          </td>
          <td>
            <%= r.comment %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
