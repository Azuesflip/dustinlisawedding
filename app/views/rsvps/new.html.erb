<div class="center-box">
  <!--<p class="text-center">Kindly respond by May 16<sup>th</sup>, 2016</p>-->

  <%= render 'shared/errors', obj: @rsvp %>

  <%= form_for(@rsvp, :html => { class: 'form-horizontal', role: 'form' }) do |r| %>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :party, 'Name\'s of people attending' %> <span class="required">*</span>
      </div>
      <div class="control-label">
        <%= r.text_field :party, class: 'form-control', placeholder: 'Please enter names separated by comma\'s', autofocus: true %>
      </div>
    </div>

    <p>Will you attend in Colorado?</p> <span class="required">*</span>

    <div class="form-group">
      <%= r.radio_button :accept, true, :checked => true %>
      <%= r.label :accept, 'Will attend in Colorado' %>
      &nbsp;&nbsp;&nbsp;
      <%= r.radio_button :accept, false, :checked => false %>
      <%= r.label :accept, 'Will not attend in Colorado' %>
    </div>

    <p>Will you attend in California?</p> <span class="required">*</span>

    <div class="form-group">
      <%= r.radio_button :acceptcalifornia, true, :checked => true %>
      <%= r.label :acceptcalifornia, 'Will attend in California' %>
      &nbsp;&nbsp;&nbsp;
      <%= r.radio_button :acceptcalifornia, false, :checked => false %>
      <%= r.label :acceptcalifornia, 'Will not attend in California' %>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :attendees, 'Number of attendees' %> <span class="required">*</span>
      </div>
      <div class="control-label">
        <%= r.number_field :attendees, class: 'form-control', placeholder: 'Enter 0 (Zero) if not attending' %>
      </div>
    </div>

    <p>Will you be drinking alcohol?</p> <span class="required">*</span>

    <div class="form-group">
      <%= r.radio_button :alcohol, true, :checked => true %>
      <%= r.label :alcohol, 'We will be drinking alcohol' %>
      &nbsp;&nbsp;&nbsp;
      <%= r.radio_button :alcohol, false, :checked => false %>
      <%= r.label :alcohol, 'We will not be drinking alcohol' %>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :drinks, 'Number of drinks we will have' %> <span class="required">*</span>
      </div>
      <div class="control-label">
        <%= r.number_field :drinks, class: 'form-control', placeholder: 'Enter 0 (Zero) if not drinking' %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :hotel %>
      </div>
      <div class="control-label">
        <%= r.text_field :hotel, class: 'form-control' %>
        <small class="pull-left">Which hotel will your party stay at. Leave blank if you are not staying in a hotel.</small> <span class="required">*</span>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :email %>
      </div>
      <div class="control-label">
        <%= r.text_field :email, class: 'form-control' %>
        <small class="pull-left">We will only email you once a few days before the wedding</small> <span class="required">*</span>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :number %>
      </div>
      <div class="control-label">
        <%= r.text_field :number, class: 'form-control' %>
        <small class="pull-left">In case we need to contact you</small> <span class="required">*</span>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :address %>
      </div>
      <div class="control-label">
        <%= r.text_field :address, class: 'form-control' %>
        <small class="pull-left">We will mail you something special to show our appreciation</small> <span class="required">*</span>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <%= r.label :comment %>
      </div>
      <div class="control-label">
        <%= r.text_area :comment, rows: 4, class: 'form-control', placeholder: 'Leave us a comment' %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label pull-left">
        <label for="rsvp_code">Enter code found in invitation</label> <span class="required">*</span>
      </div>
      <div class="control-label">
        <%= r.text_field :rsvp_code, class: 'form-control' %>
      </div>
    </div>

    <div class="text-center">
      <%= recaptcha_tags %>
    </div>

    <div class='form-group'>
      <div class='control-label pull-left'>
        <%= r.submit 'RSVP', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

  <% end %>

  <p class="required"><small>* Required fields</small></p>
</div>